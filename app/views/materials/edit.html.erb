<h1>Editing Material</h1>

<%=form_for(@material) do |f|%>
	<%= f.label :name, 'Nama Bahan' %>
	<%= f.text_field :name%>
	<%= f.label :unit, 'Unit' %>
	<%= f.text_field :unit%>
	<%= f.label :minimum_stock, 'Stok Minimum' %>
	<%= f.text_field :minimum_stock%>
	<div class="field">
    <%= f.label :current_stock %><br>
    <%= f.number_field :current_stock %>
  </div>
	<%= f.submit "Edit"%>

<% end %>

<%= link_to 'Show', @material %> |
<%= link_to 'Back', materials_path %>
